        }

        /* Style the main container */
        .container {
            text-align: center;
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            width: 300px;
        }

        /* Style the header */
        h1 {
            font-size: 24px;
